{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block titleBody %}Connexion{% endblock %}



{% block body %}


{% if error %}
<div class="alert alert-warning">Login et/ou mot de passe incorrect</div>
<br>
{% endif %}


{% if app.user %}

<div class="alert alert-success">
    Vous êtes connecté
</div>

{% else %}


<form action="{{ path('user_login') }}" method="POST">
    <div class="form-group col-3">
        <input class='form-control form-control-sm' placeholder="Adresse email ..." type="text" name="_username" required>
    </div>
    <div class="form-group col-3">
        <input class='form-control form-control-sm' placeholder="Mot de passe ..." type="password" name="_password" required>
    </div>
    <div class="form-group col-2">
        <button class="btn btn-sm btn-info" type="submit">Connexion</button>
    </div>
</form>




{% endif %}


{% endblock %}