<script>
	$(document).ready(function () {
		$.fn.dataTable.moment('DD/MM/YYYY');

		var table = $('#datatable').DataTable({
			orderCellsTop: true,
			fixedHeader: true,
			paging: true,
			"pageLength": 10,
			"responsive": true,
			"autoWidth": false,
			"dom": 'Bfrtip',
			"buttons": [
				'csv', 'excel', 'pdf'
			],
			order: [
				[0, "desc"]
			]
		});
	});
</script>
<script>
	$(document).ready(function () {
		$.fn.dataTable.moment('DD/MM/YYYY');

		var table = $('#datatable2').DataTable({
			orderCellsTop: true,
			fixedHeader: true,
			paging: true,
			searching: false,
			"pageLength": 10,
			"responsive": true,
			"autoWidth": false,
			order: [
				[0, "desc"]
			]
		});
	});
</script>
{% endblock %}