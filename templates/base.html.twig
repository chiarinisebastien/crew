<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>
        {% block title %} Welcome! {% endblock %}
    </title>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/selecttr.css" />
    <script src="https://unpkg.com/mobius1-selectr@latest/dist/selectr.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.0"></script>
    <script src="https://kit.fontawesome.com/d688bbbb7b.js" crossorigin="anonymous"></script>

    {% block stylesheets %}{% endblock %}

    <style>
        body {
            background-color: #95a5a6;
        }

        .princ {
            width: 90%;
            margin: 10px auto 0;
        }

        .form-group {
            margin-bottom: 7px;
        }

        .pastel1 {
            background-color: #A3E4D7;
            padding: 10px 7px;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .pastel2 {
            background-color: #F9E79F;
            padding: 10px 7px;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .pastel3 {
            background-color: #D2B4DE;
            padding: 10px 7px;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .grisatre{
            background-color: #f2f2f2;
            padding: 10px 7px;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .littleBoutonOui a{
            padding:5px;
            text-decoration:none;
            border:1px;
            border-color:grey;
            background-color: green;
            text-align: center;
            border-radius: 3px;
            width: 70px;
            display: block;
            color: snow;
            font-weight: bold;
        }
        .littleBoutonOui a:hover{
            padding:5px;
            text-decoration:none;
            border:1px;
            border-color:grey;
            background-color:orange;
            text-align: center;
            border-radius: 3px;
            width: 70px;
            display: block;
            color: snow;
            font-weight: bold;
        }

        .littleBoutonNon a{
            padding:5px;
            text-decoration:none;
            border:1px;
            border-color:grey;
            background-color: orange;
            text-align: center;
            border-radius: 3px;
            width: 70px;
            display: block;
            color: snow;
            font-weight: bold;
        }
        .littleBoutonNon a:hover{
            padding:5px;
            text-decoration:none;
            border:1px;
            border-color:grey;
            background-color:green;
            text-align: center;
            border-radius: 3px;
            width: 70px;
            display: block;
            color: snow;
            font-weight: bold;
        }
    </style>

    {% block javascripts %}{% endblock %}
</head>

<body>
    {% set year = 'now' | date('Y') %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="collapse navbar-collapse" id="navbarColor01">
            {% if app.user %}
            <ul class="navbar-nav mr-auto">
                <a class="navbar-brand" href="#"></a>
                {{ include('/menu/admin_menu.html.twig') }}
            </ul>
            {% endif %} {% if app.user %}
            <ul style="position: absolute; right:40px;"
                class="nav navbar-nav flex-row justify-content-md-center justify-content-start flex-nowrap">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                        aria-haspopup="true" aria-expanded="false">{{ app.user.firstname }}
                        {{ app.user.lastname }}</a>
                    <div class="dropdown-menu">
                        <a href="{{ path('user_logout') }}" class="dropdown-item">DÃ©connexion</a>
                    </div>
                </li>
            </ul>
            {% endif %}


        </div>
    </nav>
    {% block message %} {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %} {% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
    {% endfor %} {% endblock message %}

    <div class="princ">
        <div class="card border-primary">
            <div class="card-header"> {% block titleBody %}{% endblock %}
            </div>
            <div class="card-body"> {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>

    {% block javascriptEnd %}{% endblock %}
</body>

</html>